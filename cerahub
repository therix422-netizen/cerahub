local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

-- BLACK SCREEN
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CeraHubIntro"
screenGui.Parent = localPlayer:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

local blackFrame = Instance.new("Frame")
blackFrame.Size = UDim2.new(1,0,1,0)
blackFrame.BackgroundColor3 = Color3.new(0,0,0)
blackFrame.Parent = screenGui

-- STAR DROPPING BACKGROUND
local starsFolder = Instance.new("Folder")
starsFolder.Name = "Stars"
starsFolder.Parent = blackFrame

-- Function to spawn a star
local function spawnStar()
    local star = Instance.new("Frame")
    star.Size = UDim2.new(0,2,0,2)
    star.BackgroundColor3 = Color3.fromRGB(255,255,255)
    star.BorderSizePixel = 0
    star.Position = UDim2.new(math.random(),0,0,0)
    star.AnchorPoint = Vector2.new(0.5,0.5)
    star.Parent = starsFolder

    -- Animate falling
    local tween = TweenService:Create(star, TweenInfo.new(3 + math.random(), Enum.EasingStyle.Linear), {Position = UDim2.new(star.Position.X.Scale, 0, 1, 0)})
    tween:Play()
    tween.Completed:Connect(function()
        star:Destroy()
    end)
end

-- Spawn stars continuously
local starConnection
starConnection = RunService.Heartbeat:Connect(function()
    if math.random() < 0.1 then
        spawnStar()
    end
end)

-- TEXT LABELS
local title = Instance.new("TextLabel")
title.Size = UDim2.new(0,300,0,50)
title.Position = UDim2.new(0.5,-150,0.4,0)
title.BackgroundTransparency = 1
title.Text = "Cera Hub"
title.TextColor3 = Color3.fromRGB(255,255,255)
title.Font = Enum.Font.GothamBold
title.TextSize = 36
title.TextTransparency = 1
title.Parent = blackFrame

local credit = Instance.new("TextLabel")
credit.Size = UDim2.new(0,300,0,30)
credit.Position = UDim2.new(0.5,-150,0.5,0)
credit.BackgroundTransparency = 1
credit.Text = "Credit: Synergy"
credit.TextColor3 = Color3.fromRGB(255,255,255)
credit.Font = Enum.Font.Gotham
credit.TextSize = 20
credit.TextTransparency = 1
credit.Parent = blackFrame

-- FADE IN ANIMATION
TweenService:Create(title, TweenInfo.new(1.5), {TextTransparency = 0}):Play()
TweenService:Create(credit, TweenInfo.new(1.5, Enum.EasingStyle.Linear, Enum.EasingDirection.In,0, false,1.5), {TextTransparency = 0}):Play()

-- REMOVE BLACK SCREEN AFTER 3s
delay(3, function()
    starConnection:Disconnect()
    blackFrame:Destroy()
end)

